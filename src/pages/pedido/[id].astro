---
import MainLayout from '../../layouts/MainLayout.astro';
import type { Order } from '../../lib/types';
import { formatPrice, formatDate, getOrderStatusLabel, getOrderStatusColor } from '../../lib/utils';

const { id } = Astro.params;
const { DB } = Astro.locals.runtime.env;

const order = await DB.prepare(
  'SELECT * FROM orders WHERE id = ?'
).bind(id).first() as (Order & { items: string }) | null;

if (!order) {
  return Astro.redirect('/');
}

const orderData = {
  ...order,
  items: JSON.parse(order.items),
};
---

<MainLayout title={`Pedido ${id}`} description="Acompanhe seu pedido">
  <section class="py-12 bg-gray-50 dark:bg-gray-900 min-h-screen">
    <div class="container-custom max-w-4xl">
      <div class="card p-8">
        <!-- Cabeçalho -->
        <div class="border-b border-gray-200 dark:border-gray-700 pb-6 mb-6">
          <div class="flex items-start justify-between">
            <div>
              <h1 class="text-3xl font-bold mb-2">Pedido #{order.id}</h1>
              <p class="text-gray-600 dark:text-gray-400">
                Realizado em {formatDate(order.created_at)}
              </p>
            </div>
            <span class={`px-4 py-2 rounded-full text-sm font-semibold ${getOrderStatusColor(order.status)}`}>
              {getOrderStatusLabel(order.status)}
            </span>
          </div>
        </div>

        <!-- Dados do Cliente -->
        <div class="mb-8">
          <h2 class="text-xl font-bold mb-4">Dados de Entrega</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-gray-500 dark:text-gray-400">Nome</p>
              <p class="font-medium">{order.name}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500 dark:text-gray-400">WhatsApp</p>
              <p class="font-medium">{order.phone}</p>
            </div>
            <div class="md:col-span-2">
              <p class="text-sm text-gray-500 dark:text-gray-400">Endereço</p>
              <p class="font-medium">{order.address}</p>
            </div>
            {order.delivery_date && (
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Data de Entrega</p>
                <p class="font-medium">{new Date(order.delivery_date).toLocaleDateString('pt-BR')}</p>
              </div>
            )}
            {order.observations && (
              <div class="md:col-span-2">
                <p class="text-sm text-gray-500 dark:text-gray-400">Observações</p>
                <p class="font-medium">{order.observations}</p>
              </div>
            )}
          </div>
        </div>

        <!-- Itens do Pedido -->
        <div class="mb-8">
          <h2 class="text-xl font-bold mb-4">Itens do Pedido</h2>
          <div class="space-y-4">
            {orderData.items.map((item: any) => (
              <div class="flex items-center gap-4 border-b border-gray-200 dark:border-gray-700 pb-4">
                <img
                  src={item.image_url}
                  alt={item.name}
                  class="w-20 h-20 object-cover rounded-lg"
                />
                <div class="flex-1">
                  <h3 class="font-semibold">{item.name}</h3>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    Quantidade: {item.quantity}
                  </p>
                </div>
                <div class="text-right">
                  <p class="font-bold text-primary-600">
                    {formatPrice(item.price * item.quantity)}
                  </p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    {formatPrice(item.price)} cada
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Total -->
        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
          <div class="flex justify-between items-center text-2xl font-bold">
            <span>Total:</span>
            <span class="text-primary-600">{formatPrice(order.total)}</span>
          </div>
        </div>

        <!-- Status do Pedido -->
        <div class="mt-8 p-6 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
          <h3 class="font-semibold mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            Acompanhamento do Pedido
          </h3>
          <p class="text-sm text-gray-700 dark:text-gray-300">
            Seu pedido está <strong>{getOrderStatusLabel(order.status).toLowerCase()}</strong>.
            Em breve entraremos em contato pelo WhatsApp para confirmar os detalhes.
          </p>
        </div>

        <!-- Ações -->
        <div class="mt-8 flex gap-4">
          <a href="/loja" class="btn-primary">
            Continuar Comprando
          </a>
          <a href="/" class="btn-secondary">
            Voltar ao Início
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
